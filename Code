import pandas as pd
import tkinter as tk
import random
from tkinter import filedialog


#create form to select location of excel file with population to be sampled
root= tk.Tk()

canvas1 = tk.Canvas(root, width = 300, height = 300, bg = 'lightsteelblue')
canvas1.pack()

def getExcel ():
    global df

    import_file_path = filedialog.askopenfilename()
    df = pd.read_excel (import_file_path)
    global data
    data=pd.DataFrame(df)
    print (df)

browseButton_Excel = tk.Button(text='Import Excel File', command=getExcel, bg='green', fg='white', font=('helvetica', 12, 'bold'))
canvas1.create_window(150, 150, window=browseButton_Excel)

root.mainloop()

#create form to create seed and select number of samples


def select_sample():
    global seed
    seed=int(e1.get())
    global samples
    samples=int(e2.get())

    #remove line below once compelete this was used to test seed and sample numebrs
    print("Seed:  %s\nSamples: %s" % (e1.get(), e2.get()))




master = tk.Tk()
tk.Label(master, text="Seed").grid(row=0)
tk.Label(master, text="Number of Samples").grid(row=1)

e1 = tk.Entry(master)
e2 = tk.Entry(master)

e1.grid(row=0, column=1)
e2.grid(row=1, column=1)
e1.insert(10,random.randint(1000,99999))
e2.insert(1,0)

tk.Button(master,
          text='Select Samples',
          command=master.destroy).grid(row=3,
                                    column=1,
                                    sticky=tk.W,
                                    pady=4)
tk.Button(master,
          text='Set Sampling Parameters', command=select_sample).grid(row=3,
                                                       column=0,
                                                       sticky=tk.W,
                                                       pady=4)

tk.mainloop()

# select samples without replacement using seed provided
sample=df.sample(samples,replace=False, random_state=seed)
print("Seed: "+str(seed))
print("Sample selected: "+str(samples))
print(sample)

#print samples to excel

sample.to_excel(r'C:\Python test\File Name.xlsx', index = False)
